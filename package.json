{
  "name": "ci-cd",
  "private": true,
  "version": "0.0.0",
  "description": "CI/CD test application",
  "author": "Test Author",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext .jsx,.js,.cjs,.mjs,.vue --fix",
    "preview": "vite preview",
    "test": "node gitJS/tagTest.js",
    "electron:start": "cross-env NODE_ENV=development electron .",
    "electron:build": "cross-env NODE_ENV=production && npm run build && electron-builder"
  },
  "build": {
    "appId": "com.test.vue",
    "productName": "myTest",
    "directories": {
      "output": "electron-dist"
    },
    "files": [
      "main.js",
      "dist/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "mac": {
      "target": "dmg"
    }
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "cross-env": "^10.1.0",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "vite": "^7.2.4"
  }
}
